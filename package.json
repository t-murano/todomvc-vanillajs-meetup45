{
  "private": true,
  "dependencies": {
    "cpx": "^1.3.1",
    "npm-run-all": "^2.1.0",
    "rimraf": "^2.5.2",
    "todomvc-app-css": "^2.0.1",
    "todomvc-common": "^1.0.1"
  },
  "devDependencies": {
    "jasmine-core": "^2.0.0",
    "eslint": "^2.9.0",
    "esprima": "^2.7.2"
  },
  "eslintConfig": {
    "parser": "esprima",
    "rules": {
      "semi": "error"
    }
  },
  "scripts": {
    "test": "eslint --quiet js",
    "build": "npm-run-all -s clean copy",
    "clean": "rimraf dist",
    "copy:js": "cpx js/**/*.js dist/js",
    "copy:html": "cpx index.html dist",
    "copy:todomvc": "cpx 'node_modules/todomvc*/**/*.{js,css}' dist",
    "copy": "npm-run-all -p copy:js copy:html copy:todomvc"
  }
}
